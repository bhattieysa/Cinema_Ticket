<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Admin.ReservationDetailsActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Tekken"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="@dimen/_25ssp"
        android:layout_marginTop="@dimen/_18sdp"
        android:id="@+id/movietitle"/>

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@id/movietitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/seatimg"
        android:src="@drawable/seats"
        android:layout_marginTop="@dimen/_18sdp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seatttxts"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/seatimg"
        app:layout_constraintStart_toStartOf="@id/seatimg"
        app:layout_constraintEnd_toEndOf="@id/seatimg"
        android:text="2"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/white"
        android:id="@+id/txtview"
        app:layout_constraintTop_toBottomOf="@id/seatttxts"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/_40sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_18sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sttxt"
        app:layout_constraintTop_toBottomOf="@id/txtview"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Show Time: "
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/_15sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showttxt"
        app:layout_constraintTop_toBottomOf="@id/txtview"
        app:layout_constraintStart_toEndOf="@id/sttxt"
        android:text="Show Time: "
        android:textSize="@dimen/_13ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_8sdp"/>







    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datetv"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/sttxt"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Date: "
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/_15sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datetxt"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/showttxt"
        app:layout_constraintStart_toEndOf="@id/sttxt"
        android:text="12354654"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_8sdp"/>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        app:layout_constraintTop_toBottomOf="@id/datetxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/white"
        android:id="@+id/custdetview"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custdettxt"
        app:layout_constraintTop_toBottomOf="@id/custdetview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Booked By"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="@dimen/_20ssp"
        android:layout_margin="@dimen/_15sdp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custname"
        app:layout_constraintTop_toBottomOf="@id/custdettxt"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Full Name: "
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/_15sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custnametxt"
        app:layout_constraintTop_toBottomOf="@id/custdettxt"
        app:layout_constraintStart_toEndOf="@id/sttxt"
        android:text="Full Name: "
        android:layout_marginTop="@dimen/_15sdp"

        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_8sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custemail"
        app:layout_constraintTop_toBottomOf="@id/custname"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Email: "
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/_15sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custemailtxt"
        app:layout_constraintTop_toBottomOf="@id/custnametxt"
        app:layout_constraintStart_toEndOf="@id/sttxt"
        android:text="Show Time: "
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_8sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custphone"
        app:layout_constraintTop_toBottomOf="@id/custemail"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Phone: "
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/_15sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custphonetxt"
        app:layout_constraintTop_toBottomOf="@id/custemailtxt"
        app:layout_constraintStart_toEndOf="@id/sttxt"
        android:text="Show Time: "
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_8sdp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        app:layout_constraintTop_toBottomOf="@id/custphonetxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/white"
        android:id="@+id/nextviews"/>



</androidx.constraintlayout.widget.ConstraintLayout>